<html lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>ListenLog</title>
    <% %w{ reset 960 text site }.each do |stylesheet| %>
      <%= stylesheet_link_tag "#{stylesheet}.css" %>
    <% end %>
    <%= javascript_include_tag "jquery-1.3.2.min.js" %>
    <%# javascript_include_tag "spy.js" %>
  </head>
  <body>
    <div class="container_12">
      <div class="grid_7 prefix_1" id="main">
        <% if flash[:notice] %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <%= yield %>

      </div>
      <div class="grid_3 suffix_1">
        
        <div class="grid_3">
          <div class="sidebar">
            <%= render :partial => "shared/nav" %>
          </div>
        </div>
      </div>
    </div>


  </body>
</html>
