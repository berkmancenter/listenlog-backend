<p>
  <% if @offset > 0 || @items.size >= (@limit+1) %>
    <div class="row">
      <label>
        <% if @offset > 0  %>
          <%= link_to "previous", :offset => @offset - @limit  %>
        <% end %>
        <% if @items.size >= (@limit+1) %>
          <%= link_to "next", :offset => @offset + @limit %>
        <% end %>
      </label>
    </div>
  <% end %>

</p>

